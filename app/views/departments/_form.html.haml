= form_for @department do |f|
  - if @department.errors.any?
    #error_explanation
      %h2= "#{pluralize(@department.errors.count, "error")} prohibited this department from being saved:"
      %ul
        - @department.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :zav_kaf
    = f.text_field :zav_kaf
  .field
    = f.label :secretary
    = f.text_field :secretary
  .field
    = f.label :director
    = f.text_field :director
  .actions
    = f.submit 'Save'
