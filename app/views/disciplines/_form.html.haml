= form_for @discipline do |f|
  - if @discipline.errors.any?
    #error_explanation
      %h2= "#{pluralize(@discipline.errors.count, "error")} prohibited this discipline from being saved:"
      %ul
        - @discipline.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :subject_short
    = f.text_field :subject_short
  .field
    = f.label :semester
    = f.text_field :semester   
  .actions
    = f.submit 'Save'
