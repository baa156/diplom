= form_for @study_year do |f|
  - if @study_year.errors.any?
    #error_explanation
      %h2= "#{pluralize(@study_year.errors.count, "error")} prohibited this study_year from being saved:"
      %ul
        - @study_year.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :is_current
    = f.check_box :is_current
  .actions
    = f.submit 'Save'
